{
  "compilerOptions": {
    "noImplicitThis": false,
    "noImplicitAny": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "types/**/*.d.ts",
    "src/**/*.ts"
  ]
}
